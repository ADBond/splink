{
    "config": {
        "view": {
            "continuousWidth": 300,
            "continuousHeight": 300
        },
        "concat": {
            "spacing": 50
        },
        "axis": {
            "gridWidth": 0.5
        }
    },
    "title": {
        "text": "Match Threshold Selection Tool",
        "fontSize": 28,
        "subtitleFontSize": 14,
        "subtitleFontStyle": "italic",
        "subtitle": [
            "Hover over either line graph to show Confusion Matrix and selected performance metrics.",
            "",
            "Click a legend value to show a specific evaluation metric. Shift + Click to show multiple metrics"
        ],
        "anchor": "middle",
        "baseline": "line-bottom"
    },
    "hconcat": [
        {
            "vconcat": [
                {
                    "description": "Match weight vs probability",
                    "layer": [
                        {
                            "layer": [
                                {
                                    "mark": {
                                        "type": "rule"
                                    },
                                    "encoding": {
                                        "x": {
                                            "field": "truth_threshold",
                                            "type": "quantitative",
                                            "title": null,
                                            "axis": {
                                                "labelFontSize": 12,
                                                "titleFontSize": 16,
                                                "offset": 20,
                                                "orient": "bottom"
                                            }
                                        },
                                        "opacity": {
                                            "condition": {
                                                "param": "threshold",
                                                "value": 0.3,
                                                "empty": false
                                            },
                                            "value": 0
                                        }
                                    },
                                    "params": [
                                        {
                                            "name": "threshold",
                                            "select": {
                                                "type": "point",
                                                "encodings": [
                                                    "x"
                                                ],
                                                "fields": [
                                                    "truth_threshold"
                                                ],
                                                "nearest": true,
                                                "on": "mouseover"
                                            },
                                            "value": null
                                        }
                                    ]
                                },
                                {
                                    "mark": {
                                        "type": "rule"
                                    },
                                    "encoding": {
                                        "y": {
                                            "field": "match_probability",
                                            "type": "quantitative",
                                            "title": null,
                                            "axis": {
                                                "labelFontSize": 12,
                                                "titleFontSize": 16,
                                                "offset": 20,
                                                "orient": "right"
                                            }
                                        },
                                        "opacity": {
                                            "condition": {
                                                "param": "threshold",
                                                "value": 0.3,
                                                "empty": false
                                            },
                                            "value": 0
                                        }
                                    },
                                    "params": [
                                        {
                                            "name": "prob",
                                            "select": {
                                                "type": "point",
                                                "encodings": [
                                                    "y"
                                                ],
                                                "fields": [
                                                    "match_probability"
                                                ],
                                                "nearest": true,
                                                "on": "mouseover"
                                            }
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "layer": [
                                {
                                    "mark": {
                                        "type": "text",
                                        "fontSize": 14,
                                        "fontWeight": "bold",
                                        "xOffset": 25,
                                        "yOffset": 10
                                    },
                                    "encoding": {
                                        "text": {
                                            "aggregate": "min",
                                            "field": "truth_threshold",
                                            "format": "+.2f"
                                        },
                                        "y": {
                                            "field": "match_probability",
                                            "type": "quantitative",
                                            "axis": {
                                                "labelFontSize": 12,
                                                "title": "Match probability",
                                                "titleFontSize": 16,
                                                "titlePadding": 10,
                                                "orient": "left"
                                            }
                                        }
                                    },
                                    "transform": [
                                        {
                                            "filter": {
                                                "param": "threshold",
                                                "empty": false
                                            }
                                        }
                                    ]
                                },
                                {
                                    "mark": {
                                        "type": "text",
                                        "fontSize": 14,
                                        "xOffset": -25,
                                        "yOffset": -10
                                    },
                                    "encoding": {
                                        "text": {
                                            "aggregate": "min",
                                            "field": "match_probability",
                                            "format": ".3f"
                                        }
                                    },
                                    "transform": [
                                        {
                                            "filter": {
                                                "param": "threshold",
                                                "empty": false
                                            }
                                        }
                                    ]
                                },
                                {
                                    "mark": {
                                        "type": "line",
                                        "color": "red",
                                        "opacity": 0.5
                                    }
                                },
                                {
                                    "mark": {
                                        "type": "line",
                                        "color": "green",
                                        "opacity": 0.5,
                                        "strokeWidth": 3
                                    },
                                    "transform": [
                                        {
                                            "filter": "datum.truth_threshold >= threshold.truth_threshold"
                                        }
                                    ]
                                },
                                {
                                    "mark": {
                                        "type": "point",
                                        "color": "green",
                                        "size": 100
                                    },
                                    "encoding": {
                                        "opacity": {
                                            "condition": {
                                                "param": "threshold",
                                                "value": 1,
                                                "empty": false
                                            },
                                            "value": 0
                                        }
                                    }
                                }
                            ],
                            "encoding": {
                                "y": {
                                    "field": "match_probability",
                                    "type": "quantitative",
                                    "axis": {
                                        "labelFontSize": 12,
                                        "title": "Match probability",
                                        "titleFontSize": 16,
                                        "titlePadding": 50,
                                        "orient": "left"
                                    }
                                },
                                "x": {
                                    "field": "truth_threshold",
                                    "type": "quantitative",
                                    "title": "Match weight threshold",
                                    "axis": {
                                        "labelFontSize": 12,
                                        "titleFontSize": 16,
                                        "offset": 20,
                                        "orient": "top"
                                    }
                                }
                            }
                        }
                    ],
                    "height": 300,
                    "width": 300
                },
                {
                    "hconcat": [
                        {
                            "description": "Confusion matrix",
                            "layer": [
                                {
                                    "mark": {
                                        "type": "rect",
                                        "opacity": 0.5
                                    },
                                    "encoding": {
                                        "color": {
                                            "field": "count",
                                            "legend": null,
                                            "scale": {
                                                "scheme": "reds",
                                                "zero": true
                                            },
                                            "type": "quantitative"
                                        }
                                    },
                                    "transform": [
                                        {
                                            "filter": "datum.predicted == 0"
                                        }
                                    ]
                                },
                                {
                                    "mark": {
                                        "type": "rect",
                                        "opacity": 0.5
                                    },
                                    "encoding": {
                                        "color": {
                                            "field": "count",
                                            "legend": null,
                                            "scale": {
                                                "scheme": "greens",
                                                "zero": true
                                            },
                                            "type": "quantitative"
                                        }
                                    },
                                    "transform": [
                                        {
                                            "filter": "datum.predicted == 1"
                                        }
                                    ]
                                },
                                {
                                    "mark": {
                                        "type": "text",
                                        "fontSize": 14,
                                        "yOffset": -40
                                    },
                                    "encoding": {
                                        "color": {
                                            "condition": [
                                                {
                                                    "test": "datum.predicted==1 && datum.actual==1",
                                                    "value": "darkgreen"
                                                },
                                                {
                                                    "test": "datum.predicted==0 && datum.actual==0",
                                                    "value": "darkred"
                                                }
                                            ],
                                            "value": "black"
                                        },
                                        "opacity": {
                                            "condition": {
                                                "test": "datum.predicted != datum.actual",
                                                "value": 1
                                            },
                                            "value": 0.5
                                        },
                                        "text": {
                                            "field": "confusion_label",
                                            "type": "nominal"
                                        }
                                    }
                                },
                                {
                                    "mark": {
                                        "type": "text",
                                        "fontSize": 28,
                                        "fontWeight": "bold",
                                        "yOffset": 10
                                    },
                                    "encoding": {
                                        "color": {
                                            "condition": [
                                                {
                                                    "test": "datum.predicted==1 && datum.actual==1",
                                                    "value": "darkgreen"
                                                },
                                                {
                                                    "test": "datum.predicted==0 && datum.actual==0",
                                                    "value": "darkred"
                                                }
                                            ],
                                            "value": "black"
                                        },
                                        "text": {
                                            "field": "count",
                                            "format": ",",
                                            "type": "nominal"
                                        }
                                    }
                                }
                            ],
                            "encoding": {
                                "x": {
                                    "field": "actual",
                                    "type": "nominal",
                                    "title": "Actual",
                                    "axis": {
                                        "domain": false,
                                        "labelAngle": 0,
                                        "labelExpr": "datum.label == 1 ? 'Match' : 'Non-match'",
                                        "labelFontSize": 18,
                                        "labelPadding": 10,
                                        "orient": "top",
                                        "ticks": false,
                                        "titleAngle": 0,
                                        "titleFontSize": 20
                                    },
                                    "sort": "-x"
                                },
                                "y": {
                                    "field": "predicted",
                                    "type": "nominal",
                                    "title": "Predicted",
                                    "axis": {
                                        "domain": false,
                                        "labelExpr": "datum.label == 1 ? 'Match' : 'Non-match'",
                                        "labelFontSize": 18,
                                        "labelPadding": 10,
                                        "ticks": false,
                                        "titleAngle": 0,
                                        "titleFontSize": 20,
                                        "titlePadding": -30
                                    },
                                    "sort": "-y"
                                }
                            },
                            "width": {
                                "step": 150
                            },
                            "height": {
                                "step": 150
                            },
                            "resolve": {
                                "scale": {
                                    "color": "independent"
                                }
                            },
                            "transform": [
                                {
                                    "filter": {
                                        "or": [
                                            {
                                                "param": "threshold",
                                                "empty": false
                                            },
                                            {
                                                "and": [
                                                    {
                                                        "param": "threshold",
                                                        "empty": true
                                                    },
                                                    "datum.truth_threshold == datum.median_threshold"
                                                ]
                                            }
                                        ]
                                    }
                                }
                            ]
                        }
                    ],
                    "transform": [
                        {
                            "fold": [
                                "tp",
                                "tn",
                                "fp",
                                "fn"
                            ],
                            "as": [
                                "label",
                                "count"
                            ]
                        },
                        {
                            "calculate": "datum.label === 'tp' ? 'True Positive (TP)' : datum.label === 'tn' ? 'True Negative (TN)' : datum.label === 'fp' ? 'False Positive (FP)' : 'False Negative (FN)'",
                            "as": "confusion_label"
                        },
                        {
                            "calculate": "datum.label === 'tp' || datum.label === 'fp' ? 1 : 0",
                            "as": "predicted"
                        },
                        {
                            "calculate": "datum.label === 'tp' || datum.label === 'fn' ? 1 : 0",
                            "as": "actual"
                        },
                        {
                            "joinaggregate": [
                                {
                                    "op": "median",
                                    "field": "truth_threshold",
                                    "as": "median_threshold"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "width": 500,
            "height": 600,
            "description": "Accuracy chart",
            "layer": [
                {
                    "layer": [
                        {
                            "mark": {
                                "type": "point",
                                "size": 100
                            },
                            "encoding": {
                                "x": {
                                    "field": "truth_threshold",
                                    "axis": {
                                        "labelFontSize": 12,
                                        "title": "Match weight threshold",
                                        "titleFontSize": 16,
                                        "titlePadding": 10,
                                        "orient": "top",
                                        "offset": 20
                                    }
                                },
                                "opacity": {
                                    "condition": {
                                        "param": "threshold",
                                        "value": 1,
                                        "empty": false
                                    },
                                    "value": 0
                                },
                                "tooltip": [
                                    {
                                        "field": "truth_threshold",
                                        "format": ".3f",
                                        "title": "Match weight",
                                        "type": "quantitative"
                                    },
                                    {
                                        "field": "match_probability",
                                        "format": ".3%",
                                        "title": "Match probability",
                                        "type": "quantitative"
                                    },
                                    {
                                        "field": "precision",
                                        "format": ".4f",
                                        "title": "Precision",
                                        "type": "quantitative"
                                    },
                                    {
                                        "field": "recall",
                                        "format": ".4f",
                                        "title": "Recall (TPR)",
                                        "type": "quantitative"
                                    },
                                    {
                                        "field": "fp_rate",
                                        "format": ".4f",
                                        "title": "FPR",
                                        "type": "quantitative"
                                    }
                                ]
                            },
                            "transform": [
                                {
                                    "filter": {
                                        "param": "metric",
                                        "empty": true
                                    }
                                }
                            ],
                            "params": [
                                {
                                    "name": "metric",
                                    "select": {
                                        "type": "point",
                                        "fields": [
                                            "metric"
                                        ]
                                    },
                                    "value": [
                                        {
                                            "metric": "precision"
                                        },
                                        {
                                            "metric": "recall"
                                        }
                                    ],
                                    "bind": "legend"
                                },
                                {
                                    "name": "threshold",
                                    "select": {
                                        "type": "point",
                                        "encodings": [
                                            "x"
                                        ],
                                        "fields": [
                                            "truth_threshold"
                                        ],
                                        "nearest": true,
                                        "on": "mouseover"
                                    },
                                    "value": null
                                }
                            ]
                        },
                        {
                            "mark": {
                                "type": "line",
                                "clip": true
                            },
                            "encoding": {
                                "x": {
                                    "field": "truth_threshold",
                                    "axis": {
                                        "labelFontSize": 12,
                                        "title": null,
                                        "titleFontSize": 16,
                                        "titlePadding": 10,
                                        "orient": "bottom",
                                        "offset": 20
                                    }
                                },
                                "opacity": {
                                    "condition": {
                                        "param": "metric",
                                        "value": 1
                                    },
                                    "value": 0.1
                                }
                            }
                        }
                    ],
                    "encoding": {
                        "color": {
                            "field": "metric",
                            "type": "nominal",
                            "sort": [
                                "precision",
                                "recall"
                            ],
                            "title": "Performance Metric",
                            "legend": {
                                "labelExpr": "__mapping__[datum.value]",
                                "orient": "none",
                                "legendX": 500,
                                "legendY": 660,
                                "direction": "horizontal",
                                "labelFontSize": 14,
                                "titleFontSize": 16,
                                "titlePadding": 15,
                                "padding": 10,
                                "fillColor": "whitesmoke"
                            }
                        },
                        "x": {
                            "type": "quantitative",
                            "field": "truth_threshold"
                        },
                        "y": {
                            "field": "value",
                            "type": "quantitative",
                            "axis": {
                                "labelFontSize": 12,
                                "title": "Score",
                                "titleFontSize": 18,
                                "titlePadding": 10
                            },
                            "scale": {
                                "domain": [
                                    0.5,
                                    1
                                ]
                            }
                        }
                    }
                },
                {
                    "layer": [
                        {
                            "mark": {
                                "type": "rule",
                                "color": "gray"
                            },
                            "encoding": {
                                "x": {
                                    "field": "truth_threshold",
                                    "type": "quantitative",
                                    "axis": {
                                        "labelFontSize": 12,
                                        "title": null,
                                        "titleFontSize": 16,
                                        "titlePadding": 10,
                                        "orient": "bottom",
                                        "offset": 20
                                    }
                                }
                            }
                        },
                        {
                            "layer": [
                                {
                                    "mark": {
                                        "type": "rect",
                                        "fill": "whitesmoke",
                                        "x": 200,
                                        "x2": 10,
                                        "yOffset": -20,
                                        "y2Offset": 20
                                    },
                                    "encoding": {
                                        "y2": {
                                            "field": "score_index"
                                        }
                                    }
                                },
                                {
                                    "mark": {
                                        "type": "text",
                                        "align": "right",
                                        "baseline": "middle",
                                        "fontSize": 16,
                                        "x": 200,
                                        "xOffset": -10
                                    }
                                }
                            ],
                            "encoding": {
                                "color": {
                                    "field": "metric",
                                    "sort": [
                                        "precision",
                                        "recall"
                                    ]
                                },
                                "text": {
                                    "field": "y_text"
                                },
                                "y": {
                                    "field": "score_index",
                                    "type": "quantitative"
                                }
                            },
                            "transform": [
                                {
                                    "filter": {
                                        "param": "metric",
                                        "empty": true
                                    }
                                }
                            ]
                        },
                        {
                            "mark": {
                                "type": "text",
                                "fontSize": 14,
                                "fontWeight": "bold",
                                "y": "height",
                                "yOffset": -20,
                                "xOffset": 20
                            },
                            "encoding": {
                                "text": {
                                    "condition": {
                                        "param": "threshold",
                                        "aggregate": "min",
                                        "empty": false,
                                        "field": "truth_threshold",
                                        "format": "+.2f",
                                        "type": "nominal"
                                    },
                                    "value": ""
                                },
                                "x": {
                                    "field": "truth_threshold",
                                    "type": "quantitative"
                                }
                            }
                        }
                    ],
                    "transform": [
                        {
                            "filter": {
                                "param": "threshold",
                                "empty": false
                            }
                        }
                    ]
                }
            ],
            "transform": [
                {
                    "fold": [
                        "precision",
                        "recall"
                    ],
                    "as": [
                        "metric",
                        "value"
                    ]
                },
                {
                    "calculate": "0.6375 - 0.025*indexof(__metrics__, datum.metric)",
                    "as": "score_index"
                },
                {
                    "calculate": "__mapping__[datum.metric]",
                    "as": "metric_text"
                },
                {
                    "calculate": "datum.metric_text + ' = ' + format(datum.value, ',.3g')",
                    "as": "y_text"
                }
            ]
        }
    ],
    "$schema": "https://vega.github.io/schema/vega-lite/v5.14.1.json",
    "data": {
        "values": []
    }
}